# Logger Server Configuration - Example
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000

# Authentication Tokens (JSON format)
# Add your Bearer tokens as key-value pairs for each source
AUTH_TOKENS={"my_website":"your_secure_token_here","another_app":"another_secure_token"}

# Telegram Bot Configuration (for alerts)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890
TELEGRAM_ENABLED=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Alert Configuration
ALERT_MAX_PER_MINUTE=5
ALERT_COOLDOWN_MINUTES=10

# Log Storage Configuration
LOGS_DIRECTORY=./logs
MAX_LOG_FILE_SIZE=10MB
LOG_RETENTION_DAYS=30

# Security (JSON array format)
ALLOWED_SOURCES=[]
